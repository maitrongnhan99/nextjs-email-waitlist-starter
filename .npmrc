# pnpm configuration for better performance and reliability

# Use strict peer dependencies to catch potential issues early
strict-peer-dependencies=true

# Enable shamefully-hoist for better compatibility with some packages
shamefully-hoist=false

# Auto install peers to reduce manual intervention
auto-install-peers=true

# Use the shared store for better disk efficiency
store-dir=~/.pnpm-store

# Faster installations by using hardlinks
prefer-symlinked-executables=false

# Better resolution logging
resolution-mode=highest

# Enable side-effects cache for faster installs
side-effects-cache=true